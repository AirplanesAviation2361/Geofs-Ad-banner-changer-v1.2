/* ===============================
   GeoFS Ad Banner Changer Styles
   =============================== */

.geofs-custom-banner {
  font-weight: bold;
  font-size: 15px;
  text-align: center;
  color: #ffffff;
  background: linear-gradient(90deg, #0b1a2a, #102c44);
  letter-spacing: 0.5px;
  padding: 6px 8px;
  border-radius: 4px;
  transition: opacity 0.5s ease;
}
.geofs-custom-banner {
  transition: opacity 0.5s ease;
}
